---
import Layout from "../../layouts/Layout.astro";

const status = Astro.url.searchParams.get("status");
---

<Layout>
  <div class="h-[80vh] lg:h-full flex items-center justify-center">
    <div
      class="max-w-[40rem] flex flex-col items-center justify-center gap-4 border-brown rounded-lg border-2 px-12 py-17 m-8 text-center"
    >
    
        {!status && (
            <>
            <h1 id="title" class="text-xl font-semibold mb-4">Reset Password</h1>
        <form method="POST" action="/api/request-reset-password" class="flex flex-col gap-6">
        <label for="email">Enter your email to reset your password:</label>
        <div  class="flex flex-col gap-4">
          <input type="email" name="email" required class="border-2 border-brown p-2 rounded-full px-4" placeholder="you@example.com" />
        <button type="submit" class="bg-brown text-white px-4 py-2 rounded-full hover:opacity-70 cursor-pointer">Send link</button>
        </div>
      </form>
      </>
      )}

    {status === "success" && (
        <div class="flex flex-col gap-4">
          <span class="text-4xl">✅</span>
          <p class="font-semibold text-2xl">Email sent successfully</p>
          <p>We've sent you an email with the link to change your password. Please check your inbox — it may take a few minutes to arrive. Once you receive it, click the link to confirm your new password.</p>
        </div>
      )}

      {status === "error" && (
        <div class="flex flex-col items-center gap-4">
          <span class="text-4xl">❌</span>
          <p class="font-semibold text-2xl">Uh Oh... Something went wrong</p>
          <p>There was an error sending your request. Please try again later.</p>
        <a href="/reset-password" class="bg-brown text-white px-4 py-2 rounded-full w-fit hover:opacity-70 cursor-pointer">Try again</a>
        </div>
      )}
      
    </div>
  </div>
</Layout>