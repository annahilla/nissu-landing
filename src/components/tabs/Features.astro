---
import TabContentLayout from "../../layouts/TabContentLayout.astro";

const items = [
  {
    title: "Build your house with streaks",
    content:
      "Complete your daily habits to keep your streak going. Every time you hit a new streak milestone, a new floor is added to your house!",
      img: "/images/house.png"
  },
  {
    title: "Earn cookies",
    content:
      "Stay consistent and earn cookies as rewards. Feed them to Nissu — he'll protect your streak and keep your house safe!",
      img: "/images/cookie.svg"
  },
  {
    title: "Don't lose your house!",
    content:
      "Missing a day resets your streak — and your house might collapse! Stay on track to keep building higher.",
      img: "/images/destroyed-house.png"
  },
];
---

<TabContentLayout id="content-features">
    <div class="grid grid-rows-3 gap-4">
      {items.map((item) =>(
        <div class="p-4 flex gap-6 border border-2 border-brown rounded-lg">
        
        <div class="flex flex-col items-start justify-center gap-4">
      
            <div class="flex gap-3 items-center">
              <img src="/images/paw-print.svg" alt="Paw print icon" />
              <p class="text-xl font-semibold">{item.title}</p>
            </div>
            
            <p>{item.content}</p>
        </div>
        
      </div>
    ))}
    </div>
</TabContentLayout>