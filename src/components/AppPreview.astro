import habitsPreview from "../images/habits-preview.gif";
import navigationPreview from "../images/navigation-preview.gif";
import CarouselIsland from "../islands/carousel/Carouselsland";

const images = [
  {
    src: housePreview.src,
    alt: "Preview of a house for a habit",
  },
